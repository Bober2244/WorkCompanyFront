{"ast":null,"code":"import store from '@/store'; // импортируем store.js\nimport Modal from './Modal.vue'; // Импортируем модальное окно\n\nexport default {\n  components: {\n    Modal\n  },\n  props: {\n    isOpen: {\n      type: Boolean,\n      required: true\n    }\n  },\n  emits: [\"close\"],\n  async mounted() {\n    await store.loadCart(); // Загружаем корзину при монтировании компонента\n  },\n\n  data() {\n    return {\n      isModalVisible: false,\n      itemToRemove: null // ID товара для удаления\n    };\n  },\n\n  computed: {\n    cartItems() {\n      return store.cartItems; // Получаем список товаров из store\n    },\n\n    totalPrice() {\n      return store.totalPrice; // Считаем общую цену через store\n    }\n  },\n\n  methods: {\n    closeCart() {\n      this.$emit(\"close\");\n    },\n    openModal(itemId) {\n      this.itemToRemove = itemId; // Сохраняем ID товара, который нужно удалить\n      this.isModalVisible = true; // Показываем модальное окно\n    },\n\n    closeModal() {\n      this.isModalVisible = false; // Закрываем модальное окно\n      this.itemToRemove = null;\n    },\n    async removeItem() {\n      console.log(`Removing item with id: ${this.itemToRemove}`);\n      await store.removeItem(this.itemToRemove); // Удаляем товар из корзины через store\n      this.closeModal(); // Закрываем модальное окно\n    }\n  }\n};","map":{"version":3,"mappings":"AA0CA,OAAOA,KAAI,MAAO,SAAS,EAAE;AAC7B,OAAOC,KAAI,MAAO,aAAa,EAAE;;AAEjC,eAAe;EACbC,UAAU,EAAE;IACVD;EACF,CAAC;EACDE,KAAK,EAAE;IACLC,MAAM,EAAE;MACNC,IAAI,EAAEC,OAAO;MACbC,QAAQ,EAAE;IACZ;EACF,CAAC;EACDC,KAAK,EAAE,CAAC,OAAO,CAAC;EAChB,MAAMC,OAAOA,GAAG;IACd,MAAMT,KAAK,CAACU,QAAQ,CAAC,CAAC,EAAE;EAC1B,CAAC;;EACDC,IAAIA,GAAG;IACL,OAAO;MACLC,cAAc,EAAE,KAAK;MACrBC,YAAY,EAAE,IAAI,CAAE;IACtB,CAAC;EACH,CAAC;;EACDC,QAAQ,EAAE;IACRC,SAASA,GAAG;MACV,OAAOf,KAAK,CAACe,SAAS,EAAE;IAC1B,CAAC;;IACDC,UAAUA,GAAG;MACX,OAAOhB,KAAK,CAACgB,UAAU,EAAE;IAC3B;EACF,CAAC;;EACDC,OAAO,EAAE;IACPC,SAASA,GAAG;MACV,IAAI,CAACC,KAAK,CAAC,OAAO,CAAC;IACrB,CAAC;IACDC,SAASA,CAACC,MAAM,EAAE;MAChB,IAAI,CAACR,YAAW,GAAIQ,MAAM,EAAE;MAC5B,IAAI,CAACT,cAAa,GAAI,IAAI,EAAE;IAC9B,CAAC;;IACDU,UAAUA,GAAG;MACX,IAAI,CAACV,cAAa,GAAI,KAAK,EAAE;MAC7B,IAAI,CAACC,YAAW,GAAI,IAAI;IAC1B,CAAC;IACD,MAAMU,UAAUA,GAAG;MACjBC,OAAO,CAACC,GAAG,CAAE,0BAAyB,IAAI,CAACZ,YAAa,EAAC,CAAC;MAC1D,MAAMb,KAAK,CAACuB,UAAU,CAAC,IAAI,CAACV,YAAY,CAAC,EAAE;MAC3C,IAAI,CAACS,UAAU,CAAC,CAAC,EAAE;IACrB;EACF;AACF,CAAC","names":["store","Modal","components","props","isOpen","type","Boolean","required","emits","mounted","loadCart","data","isModalVisible","itemToRemove","computed","cartItems","totalPrice","methods","closeCart","$emit","openModal","itemId","closeModal","removeItem","console","log"],"sourceRoot":"","sources":["/Users/nicolassergeev/WebstormProjects/frontend-ShoesShop/src/components/CartShop.vue"],"sourcesContent":["<template>\n  <div :class=\"['cart-panel', { open: isOpen }]\" @click.self=\"closeCart\">\n    <div class=\"cart-content\">\n      <div class=\"cart-header\">\n        <h3>Корзина</h3>\n        <img src=\"../../public/emoji-2.png\" alt=\"Корзина\" class=\"cart-icon\" />\n        <button @click=\"closeCart\" class=\"close-button\">\n          <img src=\"../../public/close.svg\" alt=\"Close\" width=\"24\" height=\"24\" />\n        </button>\n      </div>\n      <div v-if=\"cartItems.length\" class=\"cart-items\">\n        <div v-for=\"item in cartItems\" :key=\"item.id\" class=\"cart-item\">\n          <router-link :to=\"{ name: 'ProductDetail', params: { id: item.id } }\" class=\"item-title-link\">\n            <h6>{{ item.title }}</h6>\n            <h6 class=\"item-size\">Размер: {{ item.size }}</h6>\n          </router-link>\n          <p class=\"item-price\">{{ item.price }} руб.</p>\n          <button @click=\"openModal(item.id, item.title)\" class=\"remove-button\">X</button>\n        </div>\n        <div class=\"cart-footer\">\n          <h3>Итого: {{ totalPrice }} руб.</h3>\n          <button class=\"form__button\">Перейти к оплате</button>\n        </div>\n      </div>\n      <div v-else>\n        <p>Ваша корзина пуста</p>\n        <img src=\"../../public/emoji-1.png\" alt=\"Корзина\" class=\"cart-icon\" />\n      </div>\n    </div>\n\n    <!-- Модальное окно -->\n    <Modal\n        v-if=\"isModalVisible\"\n        :title=\"'Удалить товар'\"\n        :message=\"'Вы уверены, что хотите удалить этот товар?'\"\n        @confirm=\"removeItem\"\n        @close=\"closeModal\"\n    />\n  </div>\n</template>\n\n<script>\nimport store from '@/store'; // импортируем store.js\nimport Modal from './Modal.vue'; // Импортируем модальное окно\n\nexport default {\n  components: {\n    Modal\n  },\n  props: {\n    isOpen: {\n      type: Boolean,\n      required: true,\n    },\n  },\n  emits: [\"close\"],\n  async mounted() {\n    await store.loadCart(); // Загружаем корзину при монтировании компонента\n  },\n  data() {\n    return {\n      isModalVisible: false,\n      itemToRemove: null, // ID товара для удаления\n    };\n  },\n  computed: {\n    cartItems() {\n      return store.cartItems; // Получаем список товаров из store\n    },\n    totalPrice() {\n      return store.totalPrice; // Считаем общую цену через store\n    },\n  },\n  methods: {\n    closeCart() {\n      this.$emit(\"close\");\n    },\n    openModal(itemId) {\n      this.itemToRemove = itemId; // Сохраняем ID товара, который нужно удалить\n      this.isModalVisible = true; // Показываем модальное окно\n    },\n    closeModal() {\n      this.isModalVisible = false; // Закрываем модальное окно\n      this.itemToRemove = null;\n    },\n    async removeItem() {\n      console.log(`Removing item with id: ${this.itemToRemove}`);\n      await store.removeItem(this.itemToRemove); // Удаляем товар из корзины через store\n      this.closeModal(); // Закрываем модальное окно\n    },\n  },\n};\n</script>\n\n<style scoped>\n/* Ваши стили для корзины */\n</style>\n"]},"metadata":{},"sourceType":"module","externalDependencies":[]}